<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/full_Detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/full_item_title" />

            <ImageView
                android:id="@+id/full_Cover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="100dp"
                android:contentDescription="Book cover"
                app:srcCompat="@drawable/ic_launcher" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textStyle="italic"
                android:textColor="@color/colorPrimary"
                android:text="@string/price" />


            <TextView
                android:id="@+id/full_Price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/full_item_title_value_spacing" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/full_item_padding"
                android:textStyle="italic"
                android:textColor="@color/colorPrimary"
                android:text="@string/isbn" />

            <TextView
                android:id="@+id/full_Isbn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/full_item_title_value_spacing" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/full_item_padding"
                android:textStyle="italic"
                android:textColor="@color/colorPrimary"
                android:text="@string/synopsis" />

            <TextView
                android:id="@+id/full_Synopsis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/full_item_title_value_spacing" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>